<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/one_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="affinity.spindown.OnePlayerActivity">

    <TextView
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:hint="@string/life_counter_hint"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkgd_rounded_p1"/>

    <!-- android:background="#da5632"-->

    <Button
        android:layout_height="60dp"
        android:layout_width="110dp"
        android:id="@+id/left"
        android:text="@string/btn_left_decrement"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="gravity"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:background="#20000000"
        android:layout_gravity="left|center_vertical" />

    <Button
        android:layout_height="60dp"
        android:layout_width="110dp"
        android:id="@+id/right"
        android:text="@string/btn_right_increment"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#20000000"
        android:layout_gravity="right|center_vertical" />

    <!--  <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Reset"
          android:id="@+id/button"
          android:layout_below="@+id/left"
          android:layout_alignRight="@+id/right"
          android:layout_alignEnd="@+id/right"
          android:layout_marginRight="43dp"
          android:layout_marginEnd="43dp"
          android:layout_marginTop="50dp"/>-->

</FrameLayout>
